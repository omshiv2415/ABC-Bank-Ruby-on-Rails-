<% if current_user.try(:admin?) %>
<h3 align="center">ABC Bank's Total Number of Accounts: <%= @accounts.count %></h3>
    <%= render 'accounts/account', obj: @accounts %>
<% elsif current_user%>
<% if current_user.verify==false %>
    <h2 align="center">Welcome to the ABC Bank Internet Banking</h2>
    <h2 align="center">Please wait for the Account Setup and visit our nearest branch</h2>
    <% else %>
    <%= render 'transactions/transaction', obj: @transactions%>
    <% end %>
<% else %>
<div class="center jumbotron">
<h2 align="center">Welcome to the ABC Bank Internet Banking</h2>
<br><br><br><br>
<%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %> <br/>
	<br><br><br><br><br>
<%= link_to 'Sign in', new_user_session_path, class: 'btn btn-primary btn-lg' %>
</div>
<ul>
<% end %>