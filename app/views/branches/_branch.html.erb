<div class="page-header">
    <h1>ABC Bank's Branch Information</h1>
   <div class="contextual">
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th colspan="1">Branch Name</th>
      <th colspan="1">Branch Location</th>
      <th colspan="1">Branch Postcode</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @branches.each do |branch| %>
      <tr>
        <td><%= branch.branchName %></td>
        <td><%= branch.branchLocation %></td>
        <td><%= branch.branchPostcode %></td>
				<td><%= link_to 'View', branch %>
        <%= link_to 'Edit', edit_branch_path(branch) %>
				<%= link_to 'Close', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Branch', new_branch_path %>
<div align="center">
<%= will_paginate %>
</div>
